<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Header custom -->
        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template" name="hyper_header" as="hyper_header" template="Magento_Theme::html/hyper_header.phtml" before="-"/>
        </referenceContainer>

        <!-- Move elements -->
        <move element="logo" as="logo" destination="hyper_header"/>
        <move element="top.search" as="topsearch" destination="hyper_header"/>
        <move element="minicart" as="minicart" destination="hyper_header"/>
        <move element="store_language" as="store_language" destination="hyper_header" />
        <move element="currency" destination="hyper_header"/>
        <move element="minicart" destination="hyper_header"/>
        <move element="skip_to_content" destination="hyper_header"/>
        <move element="header.links" destination="hyper_header"/>
        <move element="my-account-link" destination="hyper_header" />
        <move element="navigation.sections" destination="hyper_header"/>
        <move element="top.links" destination="hyper_header" />
        <move element="store_switcher" destination="hyper_header" />
        <move element="catalog.compare.link" destination="hyper_header" />

        

    </body>
</page>
